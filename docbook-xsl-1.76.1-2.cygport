inherit docbook


src_install() {
	cd ${S}

	insinto ${DOCBOOK_DIR}
	doins VERSION
	cp -r {common,eclipse,epub,fo,highlighting,html*}/ ${D}${DOCBOOK_DIR}/
	cp -r {images,javahelp,lib,manpages,profiling}/ ${D}${DOCBOOK_DIR}/
	cp -r {roundtrip,slides,template,website,xhtml*}/ ${D}${DOCBOOK_DIR}/
	docbook_xml_postinst
}
